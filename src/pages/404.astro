---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col min-h-screen gap-y-4 items-center justify-center">
    <h1 class="text-4xl font-bold">404</h1>
    <p class="text-lg">ページが見つかりませんでした。</p>
    <a href="/" class="text-blue-500 hover:opacity-70 transition-all duration-300">
      トップページに戻る
    </a>
  </div>
</Layout>
