---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/common/Header.astro';
import Skills from '@/components/Skills.astro';
import Experience from '@/components/Experience.astro';
import Footer from '@/components/common/Footer.astro';
---

<Layout title="About | ポートフォリオ">
  <Header />
  <div class="bg-gradient-to-b from-background to-secondary/30 pt-20">
    <div class="container mx-auto max-w-6xl px-4 py-8 md:py-12">
      <div class="mb-8 text-center md:mb-16">
        <h1 class="mb-3 text-2xl font-bold md:mb-4 md:text-3xl lg:text-4xl">About Me</h1>
        <p class="mx-auto max-w-2xl text-sm text-muted-foreground md:text-base">
          私のスキルと経歴についてご紹介します。
        </p>
      </div>
    </div>
  </div>
  <Skills />
  <Experience />
  <Footer />
</Layout>
