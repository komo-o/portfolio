---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Skills from '../components/Skills.astro';
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About | ポートフォリオ">
  <Navbar />
  <div class="pt-20 bg-gradient-to-b from-background to-secondary/30">
    <div class="container mx-auto px-4 max-w-6xl py-8 md:py-12">
      <div class="text-center mb-8 md:mb-16">
        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-3 md:mb-4">About Me</h1>
        <p class="text-sm md:text-base text-muted-foreground max-w-2xl mx-auto">
          私のスキルと経歴についてご紹介します。
        </p>
      </div>
    </div>
  </div>
  <Skills />
  <Experience />
  <Footer />
</Layout>