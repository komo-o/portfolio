---
import { projects } from '../data/projects';
---

<section id="projects" class="py-16 md:py-20">
  <div class="container mx-auto max-w-6xl px-4">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 md:gap-8">
      {
        projects.map((project) => (
          <div class="border-border/50 bg-card overflow-hidden rounded-xl border shadow-md transition-all hover:scale-[1.02] hover:shadow-lg">
            <div class="relative">
              <img
                src={project.image}
                alt={project.title}
                class="h-48 w-full object-cover md:h-60"
              />
              <div class="absolute right-3 top-3 md:right-4 md:top-4">
                <span class="bg-card/80 rounded-full px-2 py-0.5 text-xs font-medium backdrop-blur-sm md:px-3 md:py-1">
                  {project.year}
                </span>
              </div>
            </div>
            <div class="p-4 md:p-6">
              <h3 class="mb-2 text-lg font-bold md:text-xl">{project.title}</h3>
              <p class="text-muted-foreground mb-3 line-clamp-3 text-sm md:mb-4 md:text-base">
                {project.description}
              </p>
              <div class="mb-3 flex flex-wrap gap-1.5 md:mb-4 md:gap-2">
                {project.tags.map((tag) => (
                  <span class="rounded-full bg-secondary px-2 py-0.5 text-xs md:px-3 md:py-1 md:text-sm">
                    {tag}
                  </span>
                ))}
              </div>
              <a
                href={`/project/${projects.indexOf(project)}`}
                class="inline-flex items-center gap-1 text-sm font-medium hover:underline md:text-base"
              >
                詳細を見る →
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
