---
import { Moon, Sun } from 'lucide-astro';
---

<button id="theme-toggle" class="rounded-lg bg-accent p-2" aria-label="Toggle dark mode">
  <Sun id="sun-icon" class="hidden h-5 w-5 dark:block" />
  <Moon id="moon-icon" class="h-5 w-5 dark:hidden" />
</button>

<script>
  const Theme = {
    DARK: 'dark',
    LIGHT: 'light',
  } as const;
  type ThemeType = (typeof Theme)[keyof typeof Theme];

  const getThemePreference = () => {
    const savedTheme = localStorage.getItem('theme');
    if (typeof localStorage !== 'undefined' && savedTheme) {
      return savedTheme as ThemeType;
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? Theme.DARK : Theme.LIGHT;
  };

  const setTheme = (theme: ThemeType) => {
    document.documentElement.classList.toggle('dark', theme === Theme.DARK);
    localStorage.setItem('theme', theme);
  };

  setTheme(getThemePreference());

  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    setTheme(isDark ? Theme.LIGHT : Theme.DARK);
  });
</script>
